<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  
  <display-name>NetBazaar</display-name>
  
  <welcome-file-list>
    <welcome-file>Login.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<display-name>Login</display-name>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.netbazaar.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/Login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<display-name>Index</display-name>
  	<servlet-name>indexPage</servlet-name>
  	<servlet-class>com.netbazaar.servlet.IndexPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>indexPage</servlet-name>
  	<url-pattern>/indexPage</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<display-name>Watch</display-name>
  	<servlet-name>watch</servlet-name>
  	<servlet-class>com.netbazaar.servlet.WatchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>watch</servlet-name>
  	<url-pattern>/watch</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<display-name>Laptop</display-name>
  	<servlet-name>laptop</servlet-name>
  	<servlet-class>com.netbazaar.servlet.LaptopServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>laptop</servlet-name>
  	<url-pattern>/laptop</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<display-name>Mobile</display-name>
  	<servlet-name>mobile</servlet-name>
  	<servlet-class>com.netbazaar.servlet.MobileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>mobile</servlet-name>
  	<url-pattern>/mobile</url-pattern>
  </servlet-mapping>
    
   <servlet>
  	<display-name>Header</display-name>
  	<servlet-name>header</servlet-name>
  	<servlet-class>com.netbazaar.servlet.HeaderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>header</servlet-name>
  	<url-pattern>/header</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<display-name>Cart</display-name>
  	<servlet-name>cart</servlet-name>
  	<servlet-class>com.netbazaar.servlet.CartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>cart</servlet-name>
  	<url-pattern>/cart</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<display-name>Success</display-name>
  	<servlet-name>success</servlet-name>
  	<servlet-class>com.netbazaar.servlet.SuccessServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>success</servlet-name>
  	<url-pattern>/success</url-pattern>
  </servlet-mapping>
</web-app>